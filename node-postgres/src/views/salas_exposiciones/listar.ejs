<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Salas de Exposición</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Salas de Exposición Registradas</h2>
    <a href="/salas-exposiciones/registrar" class="btn btn-success mb-3">Registrar Nueva Sala</a>
    <table class="table table-striped table-bordered">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Descripción</th>
        </tr>
      </thead>
      <tbody>
        <% salas.forEach(sala => { %>
          <tr>
            <td><%= sala.id_sala_exposicion %></td>
            <td><%= sala.nombre_sala_exposicion %></td>
            <td><%= sala.descripcion_sala_exposicion %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
