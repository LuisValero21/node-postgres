<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Artistas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Artistas</h2>
    <a href="/artistas/registrar" class="btn btn-success mb-3">Registrar Nuevo Artista</a>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nombre Art√≠stico</th>
          <th>Nombre Completo</th>
          <th>Nacimiento</th>
          <th>Fallecimiento</th>
          <th>Resumen</th>
        </tr>
      </thead>
      <tbody>
        <% artistas.forEach(artista => { %>
          <tr>
            <td><%= artista.id_artista %></td>
            <td><%= artista.nombre_artistico_artista %></td>
            <td>
              <%= artista.primer_nombre_artista %> 
              <%= artista.segundo_nombre_artista %> 
              <%= artista.primer_apellido_artista %> 
              <%= artista.segundo_apellido_artista %>
            </td>
            <td><%= artista.fecha_nacimiento_artista?.toISOString().slice(0, 10) %></td>
            <td><%= artista.fecha_fallecimiento_artista?.toISOString().slice(0, 10) %></td>
            <td><%= artista.resumen_caracteristicas_artista %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
